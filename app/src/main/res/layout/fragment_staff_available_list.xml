<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StaffAvailableListFragment">

    <TextView
        android:id="@+id/title_staff_list_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Staff List" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_staff_list"
        app:layout_constraintTop_toBottomOf="@+id/title_staff_list_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />



</androidx.constraintlayout.widget.ConstraintLayout>