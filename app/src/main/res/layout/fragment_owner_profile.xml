<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.OwnerProfileFragment">


    <TextView
        android:id="@+id/title_proflie_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="Profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/owner_name_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name" />

        <TextView
            android:id="@+id/owner_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/owner_email_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />

        <TextView
            android:id="@+id/owner_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/owner_shop_name_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name" />

        <TextView
            android:id="@+id/owner_shop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/owner_shop_address_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Address" />

        <TextView
            android:id="@+id/owner_shop_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Address" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/owner_shop_phone_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Phone" />

        <TextView
            android:id="@+id/owner_shop_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Phone" />
    </LinearLayout>

    <Button
        android:id="@+id/staff_list_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_signin_btn"
        android:text="Staff List" />

    <Button
        android:id="@+id/logoutS_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_signin_btn"
        android:text="Log out" />


</LinearLayout>